@page
@model TRIFAN_RAUL_EXAMEN_FINAL.Pages.Meniu.EditModel

@{
    ViewData["Title"] = "Editeaza";
}



<h4 style="color:black ; font-family:'MV Boli'">Mr. Yu</h4>
<hr />
<div class="row" style="color:black ; font-family:'MV Boli'">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Restaurant.ID" />
            <div class="form-group">
                <label asp-for="Restaurant.Preparat" class="control-label"></label>
                <input asp-for="Restaurant.Preparat" class="form-control" />
                <span asp-validation-for="Restaurant.Preparat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.Descriere" class="control-label"></label>
                <input asp-for="Restaurant.Descriere" class="form-control" />
                <span asp-validation-for="Restaurant.Descriere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.Gramaj" class="control-label"></label>
                <input asp-for="Restaurant.Gramaj" class="form-control" />
                <span asp-validation-for="Restaurant.Gramaj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.Pret" class="control-label"></label>
                <input asp-for="Restaurant.Pret" class="form-control" />
                <span asp-validation-for="Restaurant.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salveaza modificarile" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="color:black ; font-family:'MV Boli'">
    <a asp-page="./Index">Inapoi la meniu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
