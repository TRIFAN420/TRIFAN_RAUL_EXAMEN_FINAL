@page
@model TRIFAN_RAUL_EXAMEN_FINAL.Pages.Meniu.IndexModel

@{
    ViewData["Title"] = "Meniul nostru";
}



<p>
    <a asp-page="Create" style="color:black ; font-family:'MV Boli'">Adauga un nou preparat</a>
</p>
<table class="table" ; style="color:black ; font-family:'MV Boli'">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant[0].Preparat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant[0].Descriere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant[0].Gramaj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant[0].Pret)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Restaurant) {
        <tr >
            <td>
                @Html.DisplayFor(modelItem => item.Preparat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriere)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gramaj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td >
                <a asp-page="./Edit" asp-route-id="@item.ID">Editeaza preparatul</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Detalii preparat</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Sterge preparat</a>
            </td>
        </tr>
}
    </tbody>
</table>
